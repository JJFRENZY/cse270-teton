{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Local Server (teton/1.6)",
      "type": "shell",
      "command": "cd \"cse270 5/teton/1.6\" && python3 -m http.server 5500",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "."
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Serving HTTP on .* port 5500"
        }
      }
    },
    {
      "label": "Run Smoke Tests (pytest)",
      "type": "shell",
      "options": {
        "env": { "SMOKE_BASE_URL": "http://localhost:5500" }
      },
      "command": "python3 -m pytest -q",
      "group": "test"
    },
    {
      "label": "Smoke: Server â†’ Tests (compound)",
      "dependsOn": [
        "Start Local Server (teton/1.6)",
        "Run Smoke Tests (pytest)"
      ]
    }
  ]
}
